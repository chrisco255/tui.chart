{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@t/*": ["./types/*"]
    },
    "downlevelIteration": true,
    "declaration": true,
    "typeRoots": ["./types", "./node_modules/@types", "../../node_modules/@types"],
    "types": ["jest", "node"],
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "stories/**/*.ts",
    "stories/**/*.js",
    "tests/**/*.ts",
    "types/**/*"
  ],
  "exclude": ["node_modules"]
}
